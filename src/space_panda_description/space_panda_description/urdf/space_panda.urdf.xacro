<?xml version="1.0"?>
<robot name="space_panda" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Load generic Franka robot macro -->
  <xacro:include filename="$(find franka_description)/robots/common/franka_robot.xacro"/>

  <!-- Parameters -->
  <xacro:property name="load_gripper" value="true"/>
  <xacro:property name="ee_id" value="franka_hand"/>

  <!-- World frame to anchor the satellite + robot system -->
  <link name="world"/>

  <!-- Satellite body (realistic mesh) the robot will sit on -->
  <!-- Uses cubesat mesh from the package's meshes directory.
       Use an absolute file:// URI so Gazebo can always resolve it. -->
  <link name="satellite_base">
    <visual>
      <geometry>
        <mesh
          filename="file:///home/anish/data/SpaceTS/robotics/space_robotics/src/space_panda_description/meshes/cubesat.stl"
          scale="0.5 0.5 0.5"/>
      </geometry>
      <material name="satellite_grey">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>

    <!-- Use same mesh for collision for now; you can swap to a simplified collision mesh later -->
    <collision>
      <geometry>
        <mesh
          filename="file:///home/anish/data/SpaceTS/robotics/space_robotics/src/space_panda_description/meshes/cubesat.stl"
          scale="0.5 0.5 0.5"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="500.0"/>
      <origin xyz="0 0 0"/>
      <inertia
        ixx="20" ixy="0" ixz="0"
        iyy="20" iyz="0"
        izz="20"/>
    </inertial>
  </link>

  <!-- Fix the satellite in the world frame -->
  <joint name="world_to_satellite" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="world"/>
    <child link="satellite_base"/>
  </joint>

  <!-- Joint between satellite and Franka base -->
  <!-- Increase z so the robot base sits on top of the satellite mesh, not inside it -->
  <joint name="satellite_to_franka" type="fixed">
    <!-- Tune this z value based on your cubesat mesh thickness (start with 0.5) -->
    <origin xyz="0 0 0.75" rpy="0 0 0"/>
    <parent link="satellite_base"/>
    <child link="fr3_link0"/>
  </joint>

  <xacro:franka_robot
    arm_id="fr3"
    joint_limits="${xacro.load_yaml('$(find franka_description)/robots/fr3/joint_limits.yaml')}"
    inertials="${xacro.load_yaml('$(find franka_description)/robots/fr3/inertials.yaml')}"
    kinematics="${xacro.load_yaml('$(find franka_description)/robots/fr3/kinematics.yaml')}"
    accelerometer_config="${xacro.load_yaml('$(find franka_description)/robots/fr3/accelerometers.yaml')}"
    dynamics="${xacro.load_yaml('$(find franka_description)/robots/fr3/dynamics.yaml')}"
    hand="${load_gripper}"
    ee_id="${ee_id}"
    connected_to=""/>

</robot>